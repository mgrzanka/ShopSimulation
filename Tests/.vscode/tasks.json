{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "../Client/Client.cpp",
                "../Client/MenagersFriend.cpp",
                "../Client/RegularClient.cpp",
                "../Client/Tourist.cpp",
                "../UserInterface/UserInterface.cpp",
                "../Structures.cpp",
                "${workspaceFolder}/test_client.cpp",
                "${workspaceFolder}/catch_amalgamated.cpp",
                "-o",
                "${workspaceFolder}/${workspaceFolderBasename}",
                "-Wall",
                "-Werror",
                "-Wpedantic",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
